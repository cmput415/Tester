        "allowError": true
      }
    ] 
  },
  "GNU": [
    {
      "stepName": "compile",
      "executablePath": "$EXE",
      "arguments": [
        "$INPUT",  
        "-o", "$OUTPUT"
      ],
      "output": "test",
      "allowError": true 
    },
      {
        "stepName": "run",
        "executablePath": "$INPUT",
        "arguments": [],
        "output": "-",
        "usesInStr": true,
        "allowError": true
      }
  ]
